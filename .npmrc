# Increase network timeout for slow connections
network-timeout=60000

# Use maximum network concurrency
network-concurrency=16

# Disable audit to speed up installations
audit=false

# Disable update notifier
update-notifier=false

# Use fastest registry
registry=https://registry.npmjs.org/

# Disable progress bar for cleaner logs
progress=false

# Cache optimization
cache-min=3600
prefer-offline=true 